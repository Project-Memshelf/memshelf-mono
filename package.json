{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "memshelf-mono",
    "version": "1.0.0",
    "description": "The monorepo for Project Memshelf",
    "private": true,
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:Project-Memshelf/memshelf-mono.git"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "bun@1.2.21",
    "engines": {
        "node": ">=22",
        "bun": ">=1.2"
    },
    "scripts": {
        "clean:root": "rimraf node_modules bun.lock && bun install",
        "clean": "bun run clean:root && turbo run clean",
        "build": "turbo run build",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "typecheck": "turbo run typecheck",
        "check": "bun run lint:fix && bun run build && bun run typecheck && bun test",
        "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
        "docker:stop": "docker compose -f ./docker/docker-compose.yml down",
        "docker:clear": "docker compose -f ./docker/docker-compose.yml down -v",
        "docker:logs": "docker compose -f ./docker/docker-compose.yml logs -f",
        "cli": "bun run --cwd apps/cli dev --",
        "cli:build": "bun run --cwd apps/cli build",
        "cli:dev": "bun run --cwd apps/cli dev --",
        "memshelf": "bun run --cwd apps/cli dev --",
        "docker:test:start": "docker compose -f ./docker/docker-compose.test.yml up -d",
        "docker:test:stop": "docker compose -f ./docker/docker-compose.test.yml down",
        "docker:test:clear": "docker compose -f ./docker/docker-compose.test.yml down -v",
        "docker:test:logs": "docker compose -f ./docker/docker-compose.test.yml logs -f"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.3",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@types/bun": "^1.2.21",
        "lefthook": "^1.12.3",
        "rimraf": "^6.0.1",
        "turbo": "^2.5.6",
        "typescript": "^5.9.2"
    }
}
